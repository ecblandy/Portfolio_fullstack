{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:3000", // URL do seu app React
      "webRoot": "${workspaceFolder}/src", // Pasta raiz do seu código fonte
      "sourceMapPathOverrides": {
        "webpack:///*": "${workspaceFolder}/src/*" // Mapeia os arquivos TS para o código fonte
      }
    }
  ]
}
